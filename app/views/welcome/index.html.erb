<%= render partial: 'shared/nav' %>

<% if current_user %>
  <div class="container">
    <%= button_to "Log Out", logout_path, method: :delete, class: "button" %>
  </div>
<% else %>
  <div class="container">
      <%= button_to "Create User", register_path, method: :get, class: "button" %>
  </div>
  <br>
  <div class="container">
    <%= button_to "Log In", login_path, method: :get, class: "button" %>
  </div>
<% end %>
<br>
<div class="container">
  <h3>Existing Users</h3>
  <% @users.each do | user | %>
    <div><%= link_to "#{user.email}", user_path(user) %></div>
  <% end %>
</div>